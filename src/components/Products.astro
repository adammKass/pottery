---
import { Image } from "astro:assets";
import { products } from "../constants";
---

<section id="products" class="bg-white flex items-center justify-center py-12">
  <div class="content flex flex-col max-w-lg text-center gap-6 items-center">
    <div class="flex flex-col gap-1" data-reveal-stagger data-stagger="200">
      <div
        class="flex gap-1 items-center justify-center reveal"
        data-reveal-item
      >
        <div class="w-24 h-px bg-darker"></div>
        <span class="font-serif text-sm uppercase">Naša ponuka</span>
        <div class="w-24 h-px bg-darker"></div>
      </div>

      <h2 class="text-2xl lg:text-3xl uppercase reveal" data-reveal-item>
        Ponúkame Vám
      </h2>
    </div>

    <div
      class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-5 gap-4 overflow-hidden w-full"
      data-reveal-stagger
      data-stagger="200"
    >
      {
        products.map((product) => (
          <div
            class="card py-2 lg:py-8 justify-center gap-4 h-fit lg:h-80 reveal"
            data-reveal-item
          >
            <figure class="">
              <Image
                src={product.img}
                alt={product.description}
                class="w-32 aspect-square opacity-50"
              />
            </figure>
            <div class=" px-4 pb-0 pt-2 text-center">
              <h2 class="uppercase">{product.name}</h2>

              <a class="font-serif text-sm ">Od {product.price}</a>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>
